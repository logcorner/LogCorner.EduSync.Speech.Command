{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "instrumentationKey": "093b2047-5048-4d37-a772-3dde8e6e49ef",
          "restrictedToMinimumLevel": "Information",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  },
  "HubUrl": "http://logcorner.edusync.notification.server:80/logcornerhub",
  "allowedOrigins": "http://localhost:4200",
  "ConnectionStrings": {
    "SpeechDB": "Data Source=logcorner.edusync.speech.command.data;Initial Catalog=LogCorner.EduSync.Speech.Database;User=sa;Password=MyC0m9l&xP@ssw0rd"
  },
  "isAuthenticationEnabled": false,
  "AzureAdB2C": {
    "Instance": "https://[TenantName].b2clogin.com/tfp/",
    "ClientId": "[ClientId]",
    "CallbackPath": "/signin-oidc",
    "Domain": "[TenantName].onmicrosoft.com",
    "SignUpSignInPolicyId": "B2C_1_SignUpIn",
    "ResetPasswordPolicyId": "B2C_1_PasswordReset",
    "EditProfilePolicyId": "B2C_1_ProfileEdit"
  },
  "SwaggerUI": {
    "TenantName": "[TenantName]",
    "OAuthClientId": "[OAuthClientId]",
    "OAuthClientSecret": "[OAuthClientSecret]"
  },

  "AzureAdConfidentialClient": {
    "ClientId": "[ClientId]",
    "ClientSecret": "[ClientSecret]",
    "TenantId": "[TenantId]"
  },
  "OpenTelemetry": {
    "ServiceName": "LogCorner.EduSync.Speech.Command.Docker",
    "SourceName": "command-api",
    "Jaeger": {
