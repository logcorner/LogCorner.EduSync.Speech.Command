{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "LogCorner.EduSync.Speech.Command.Http.Api"
    }
  },
  "HubUrl": "http://hub-notification-server-service:80/logcornerhub",
  "allowedOrigins": "https://kubernetes.docker.com",
  "ConnectionStrings": {
    "SpeechDB": "Data Source=speech-command-db-service;Initial Catalog=LogCorner.EduSync.Speech.Database;User=sa;Password=MyC0m9l&xP@ssw0rd;TrustServerCertificate=True"
  },
  "isAuthenticationEnabled": false,
  "AzureAdB2C": {
    "CallbackPath": "/signin-oidc",

    "SignUpSignInPolicyId": "B2C_1_SignUpIn",
    "ResetPasswordPolicyId": "B2C_1_PasswordReset",
    "EditProfilePolicyId": "B2C_1_ProfileEdit"
  },
  "OpenTelemetry": {
    "ServiceName": "LogCorner.EduSync.Speech.Command.Kubernetes",
    "SourceName": "command-api",
    "Jaeger": {
      "Hostname": "jaeger-agent",
      "PortNumber": 6831
    },
    "Zipkin": {
      "Hostname": "zipkin",
      "PortNumber": 9411
    },
    "NewRelic": {
